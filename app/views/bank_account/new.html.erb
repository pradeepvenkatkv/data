<%= simple_form_for(BankAccount.new, :url => "/bank_account/create", :html => { :method => :post}) do |f| %>
  <%= f.error_notification %>
  <div class="container" style ="text-align:center ;margin-top:40px;">
  <div class="" style ="text-align: center;" ><h2>BANK DETAILS</h2>  
    <div class="form-group center">
      <%= f.input :full_name, label: false, :input_html => { :style => "border: 1px solid #cccccc; border-radius: 4px; width: 30%; transition: border-color ease-in-out 0.15s, box-shadow ease-in-out 0.15s; height: 34px;    padding: 6px 12px;font-size: 14px;"}, :required=>true, :placeholder=>"Full Name as per bank record" %>
    </div>
    <div class="form-group center">
      <%= f.input :bank_name, label: false, :input_html => { :style => "border: 1px solid #cccccc; border-radius: 4px; width: 30%; transition: border-color ease-in-out 0.15s, box-shadow ease-in-out 0.15s; height: 34px;    padding: 6px 12px;font-size: 14px;"}, :required=>true, :placeholder=>"Bank Name" %>
    </div>
    <div class="form-group center">
      <%= f.input :account_number, label: false, :input_html => { :style => "border: 1px solid #cccccc; border-radius: 4px; width: 30%; transition: border-color ease-in-out 0.15s, box-shadow ease-in-out 0.15s; height: 34px;    padding: 6px 12px;font-size: 14px;"}, :required=>true, :placeholder=>"Account Number" %>
    </div>
    <div class="form-group center">
      <%= f.input :ifsc, label: false, :input_html => { :style => "border: 1px solid #cccccc; border-radius: 4px; width: 30%; transition: border-color ease-in-out 0.15s, box-shadow ease-in-out 0.15s; height: 34px;    padding: 6px 12px;font-size: 14px;"}, :required=>true, :placeholder=>"IFSC Code" %>
    </div>
    <div class="form-group center">
      <%= f.input :branch_name, label: false, :input_html => { :style => "border: 1px solid #cccccc; border-radius: 4px; width: 30%; transition: border-color ease-in-out 0.15s, box-shadow ease-in-out 0.15s; height: 34px;    padding: 6px 12px;font-size: 14px;"}, :required=>true, :placeholder=>"Branch Name" %>
    </div>
      
      
      <div class="clear"></div>
    </div>
  </div>  
  </div>
  
  <div class="form-group center" style ="text-align:center ;">
    <button class="btn btn-primary" type="submit">
      <% if current_page?(action: 'new') %>
        Add Bank Details
      <% else %>
        Update
      <% end %>
    </button>
  </div>
  <div class="clear"></div>
<% end %>
