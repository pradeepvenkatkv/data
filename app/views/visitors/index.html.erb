<div class="container">
<div class = "background" style ="position:absolute ;"><%= image_tag('logo.jpg') %>

</div> 
  <div class="authform" style ="position:relative;">

    <%= form_for(User.new, url: new_user_session_path , :html => {:style =>"margin-top:29%; background-color:transperant;"}) do |f| %>
      <div class="form-group center">
        <%= f.email_field :email, :required=>true, :placeholder => "Email", :autofocus => true, class: 'form-control' %>
      </div>
      <div class="form-group center">
        <%= f.password_field :password, :required=>true, :placeholder => "Password", class: 'form-control' %>
      </div>
        <%= f.submit 'Sign in', :class => 'btn btn-primary' %>
        
    <% end %>
  </div>
</div>

