              <tr>
                <td>
                  <%= stationary.stationary_type %>
                </td>
                <td>
                  <%= stationary.category %>
                </td>
                <td>
                  <%= stationary.product %>
                </td>

                <td>
                  <%= stationary.quantity %>
                </td>
                
                <td>
                  <%= stationary.created_at.to_datetime.strftime("%d/%m/%Y %I:%M:%S %p") %>
