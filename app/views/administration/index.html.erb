<%= link_to "Stationary Request", new_administration_path, :class => 'btn btn-primary' ,:style => "margin-top: 15px;"%>
<div class="main">
  <div class="wide_cont custom-background" style="background:transparent;">
    <div class="doc-main">
      <div class="doc-content">
        <div class="" style ="text-align: center;" ><h2>STATIONARY </h2>
        <div class="rgt" style ="float:right ;" >
         
        </div>
        
        <table class="responstable">
          <thead>
            <tr>
              
              <td>
                <b>
                  STATIONARY TYPE
                </b>
              </td>
              <td>
                <b>
                  CATEGORY
                </b>
              </td>
              <td>
                <b>
                  PRODUCT
                </b>
              </td>
              <td>
                <b>
                  QUNATITY
                </b>
              </td>
              
              <td>
                <b>
                  REQUEST RAISED AT
                </b>
              </td>
              
            </tr>
