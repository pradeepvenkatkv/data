<%= simple_form_for(Profile.new, :url => "/profile/create", :html => { :method => :post}) do |f| %>
  <%= f.error_notification %>
  <div class="container" style ="text-align:center ;margin-top:40px;">
  <div class="" style ="text-align: center;" ><h2>NEW EMPLOYEE </h2>  
    <div class="form-group center">
      <%= f.input :name, label: false, :input_html => { :style => "border: 1px solid #cccccc; border-radius: 4px; width: 30%; transition: border-color ease-in-out 0.15s, box-shadow ease-in-out 0.15s; height: 34px;    padding: 6px 12px;font-size: 14px;required: true"}, :placeholder=>"Full Name as per SSC" %>
    </div>
    <div class="form-group center">
      <%= f.input :email, label: false, :input_html => { :style => "border: 1px solid #cccccc; border-radius: 4px; width: 30%; transition: border-color ease-in-out 0.15s, box-shadow ease-in-out 0.15s; height: 34px;    padding: 6px 12px;font-size: 14px;"}, :required=>true, :placeholder=>"Email" %>
    </div>
    <div class="form-group center">
      <%= f.input :contact_number, label: false, :input_html => { :style => "border: 1px solid #cccccc; border-radius: 4px; width: 30%; transition: border-color ease-in-out 0.15s, box-shadow ease-in-out 0.15s; height: 34px;    padding: 6px 12px;font-size: 14px;"}, :required=>true, :placeholder=>"Contact Number" %>
    </div>
    <div class="form-group center">
      <%= f.select :gender, options_for_select(["Male","Female"]), {}, class: "form-control-new" %>
    </div>
    <div class="form-group center">
      <%= f.input :emergency_contact, label: false, :input_html => { :style => "border: 1px solid #cccccc; border-radius: 4px; width: 30%; transition: border-color ease-in-out 0.15s, box-shadow ease-in-out 0.15s; height: 34px;    padding: 6px 12px;font-size: 14px;"}, :required=>true, :placeholder=>"Emergency Contact" %>
    </div>
    <div class="form-group center">
      <%= f.input :date_of_birth, label: false, :input_html => { :style => "border: 1px solid #cccccc; border-radius: 4px; width: 30%; transition: border-color ease-in-out 0.15s, box-shadow ease-in-out 0.15s; height: 34px;    padding: 6px 12px;font-size: 14px;"}, :required=>true, :placeholder=>"Date of Birth" %>
    </div>
    <div class="form-group center">
      <%= f.input :address, label: false, :input_html => { :style => "border: 1px solid #cccccc; border-radius: 4px; width: 30%; transition: border-color ease-in-out 0.15s, box-shadow ease-in-out 0.15s; height: 34px;    padding: 6px 12px;font-size: 14px;"}, :required=>true, :placeholder=>"Address" %>
    </div>
      
      
      <div class="clear"></div>
    </div>
  </div>  
  </div>
  
  <div class="form-group center" style ="text-align:center ;">
    <button class="btn btn-primary" type="submit">
      <% if current_page?(action: 'new') %>
        Add Employee
      <% else %>
        Update
      <% end %>
    </button>
  </div>
  <div class="clear"></div>
<% end %>
